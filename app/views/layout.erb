<!-- layout.erb -->
<!doctype html>
<html>
    <head>
        <meta charset="utf-8">
        <title>Chitter</title>
        <link href="<%= url('stylesheets/style.css') %>" rel="stylesheet" type="text/css" />
    </head>
    <body>
      <div class="container">
        <div class="box">
          <% if current_user %>
            Welcome, <%= current_user.email %>
          <% end %>
          <% if flash[:errors] && !flash[:errors].empty? %>
              Please refer to the following errors below:
              <ul id='errors'>
                <% flash[:errors].each do |error| %>
                  <li><%= error %></li>
                <% end %>
              </ul>
            <% end %>
          <%= yield %>
        </div>
      </div>
    </body>
</html>
