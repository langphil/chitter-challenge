<!-- layout.erb -->
<!doctype html>
<html>
    <head>
        <meta charset="utf-8">
        <title>Chitter</title>
        <link href="<%= url('stylesheets/style.css') %>" rel="stylesheet" type="text/css" />
    </head>
    <body>
        <div class="container">
            <div class="box">
                <% if current_user %>
                    Welcome, <%= current_user.username %>
                    <form method='post' action='/sessions'>
                        <input type='hidden' name='_method' value='delete'>
                        <input type='submit' value='Sign out'>
                    </form>
                <% end %>
                <% if flash[:errors] && !flash[:errors].empty? %>
                    Please refer to the following errors below:
                    <ul id='errors'>
                        <% flash[:errors].each do |error| %>
                            <li><%= error %></li>
                        <% end %>
                    </ul>
                <% end %>
                <% if flash[:notice] %>
                    <div id='notice'>
                        <%= flash[:notice] %>
                    </div>
                <% end %>
                <%= yield %>
            </div>
        </div>
    </body>
</html>
